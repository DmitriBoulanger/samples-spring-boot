<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.dbo.samples.springboot</groupId>
		<artifactId>spring-boot-JBEHAVE-2</artifactId>
		<version>0.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>spring-boot-JBEHAVE-2-stories-java</artifactId>
	<packaging>jar</packaging>

	<name>Samples Spring-Boot JBEHAVE 2-Stories Java</name>

	<build>
		<plugins>
			<!-- ================================================================= -->
			<!-- JBehave: Installation of the WEB-Resources for Report-Generation -->
			<!-- Default location: target/jbehave/view -->
			<!-- ================================================================= -->
			<plugin>
				<groupId>org.jbehave</groupId>
				<artifactId>jbehave-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-view-resources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-view-resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- ========================================================================================= -->
		<!-- APPLICATIONs TO BE TESTED                                                                 -->
		<!-- ========================================================================================= -->

		<dependency>
				<groupId>de.dbo.samples.springboot</groupId>
				<artifactId>spring-boot-JBEHAVE-2-app-1</artifactId>
				<version>0.0.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-starter-web</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
				<groupId>de.dbo.samples.springboot</groupId>
				<artifactId>spring-boot-JBEHAVE-2-app-2</artifactId>
				<version>0.0.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-starter-web</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- ========================================================================================= -->
		<!-- SPRING-BOOT                                                                               -->
		<!-- ========================================================================================= -->

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-test-autoconfigure</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- ========================================================================================= -->
		<!--                             JBEHAVE                                                       -->
		<!-- ========================================================================================= -->

		<!-- Core -->
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-spring</artifactId>
		</dependency>

		<!-- WEB-Resources for Report-Generation -->
		<dependency>
			<groupId>org.jbehave.site</groupId>
			<artifactId>jbehave-site-resources</artifactId>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-core</artifactId>
			<classifier>resources</classifier>
			<type>zip</type>
		</dependency>
		
		<!-- ========================================================================================= -->
		<!--                             IT COMMONS                                                    -->
		<!-- ========================================================================================= -->
		
		<dependency>
				<groupId>de.dbo.samples.springboot</groupId>
				<artifactId>spring-boot-JBEHAVE-2-jb</artifactId>
				<version>0.0.0-SNAPSHOT</version>
		</dependency>

	</dependencies>

</project>
