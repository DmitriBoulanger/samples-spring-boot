<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.dbo.samples.springboot</groupId>
		<artifactId>spring-boot-JBEHAVE-2</artifactId>
		<version>0.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>spring-boot-JBEHAVE-2-app-stories-web</artifactId>
	<packaging>jar</packaging>

	<name>Samples Spring-Boot JBEHAVE 2-App Stories WEB</name>

	<build>
		<plugins>

			<!-- ================================================================= -->
			<!-- JBehave: Installation of the WEB-Resources for Report-Generation  -->
			<!-- Location: target/jbehave/view                                     -->
			<!-- ================================================================= -->
			
			<plugin>
				<groupId>org.jbehave</groupId>
				<artifactId>jbehave-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-view-resources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-view-resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- ========================================================================================= -->
		<!-- APPLICATION TO BE TESTED                                                                  -->
		<!-- ========================================================================================= -->

		<dependency>
				<groupId>de.dbo.samples.springboot</groupId>
				<artifactId>spring-boot-JBEHAVE-2-app</artifactId>
				<version>0.0.0-SNAPSHOT</version>
		</dependency>

		<!-- ========================================================================================= -->
		<!-- SPRING-BOOT                                                                               -->
		<!-- ========================================================================================= -->

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
		</dependency>

		<!-- ========================================================================================= -->
		<!--                             JBEHAVE                                                       -->
		<!-- ========================================================================================= -->

		<!-- Core -->
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-spring</artifactId>
		</dependency>

		<!-- WEB-Resources for Report-Generation -->
		<dependency>
			<groupId>org.jbehave.site</groupId>
			<artifactId>jbehave-site-resources</artifactId>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-core</artifactId>
			<classifier>resources</classifier>
			<type>zip</type>
		</dependency>
		
		<!-- ========================================================================================= -->
		<!--                             ETC                                                           -->
		<!-- ========================================================================================= -->
		
		<dependency>
			<groupId>com.jayway.restassured</groupId>
			<artifactId>rest-assured</artifactId>
			<version>2.5.0</version>
		</dependency>
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
		</dependency>

	</dependencies>

</project>
