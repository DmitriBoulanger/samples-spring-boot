<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.dbo.samples.springboot</groupId>
		<artifactId>spring-boot-JBEHAVE-2-app</artifactId>
		<version>0.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>spring-boot-JBEHAVE-2-app-deploy</artifactId>
	<packaging>war</packaging>

	<name>Samples Spring-Boot JBEHAVE 2-Deployment</name>

	<build>
		<finalName>IT123</finalName>
	
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
                    <packagingExcludes>WEB-INF/lib/tomcat-*.jar</packagingExcludes>
                    <packagingExcludes>WEB-INF/lib/spring-test-*.jar</packagingExcludes>
                    <packagingExcludes>WEB-INF/lib/spring-boot-test-*.jar</packagingExcludes>
                    <packagingExcludes>WEB-INF/lib/spring-boot-starter-*.jar</packagingExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- ========================================================================================= -->
		<!-- APPLICATIONS TO BE INTEGRATED AND TESTED -->
		<!-- ========================================================================================= -->

		<dependency>
			<groupId>de.dbo.samples.springboot</groupId>
			<artifactId>spring-boot-JBEHAVE-2-app-1</artifactId>
			<version>0.0.0-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>de.dbo.samples.springboot</groupId>
			<artifactId>spring-boot-JBEHAVE-2-app-2</artifactId>
			<version>0.0.0-SNAPSHOT</version>
			<classifier>classes</classifier>
		</dependency>

		<dependency>
			<groupId>de.dbo.samples.springboot</groupId>
			<artifactId>spring-boot-JBEHAVE-2-app-3</artifactId>
			<version>0.0.0-SNAPSHOT</version>
		</dependency>
 
		<!-- ========================================================================================= -->
		<!-- SPRING-BOOT -->
		<!-- ========================================================================================= -->

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
		</dependency>



	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>de.dbo.samples.springboot</groupId>
				<artifactId>spring-boot-JBEHAVE-2-app-2</artifactId>
				<version>0.0.0-SNAPSHOT</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>
