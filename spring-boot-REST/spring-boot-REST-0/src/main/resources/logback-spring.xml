<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<configuration>
	 <include resource="org/springframework/boot/logging/logback/base.xml"/>

	<appender name="CONSOLE_ERROR" class="ch.qos.logback.core.ConsoleAppender">
	<target>System.err</target>
		<encoder>
			<pattern>%-7relative ms. [%30thread] %-5level %50logger{0} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
	 	<target>System.out</target>
		<encoder>
			<pattern>%-7relative ms. [%30thread] %-5level %50logger{0} - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="WARN" additivity="false">
		<appender-ref ref="CONSOLE_ERROR" />
	</root>
	
	<logger name="de.dbo.samples" 
		level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.springframework.boot.context.embedded.tomcat" 
		level="INFO" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.springframework.boot.context.embedded.tomcat.TomcatEmbeddedServletContainerFactory"
		level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org.springframework.boot.web" 
		level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

</configuration>