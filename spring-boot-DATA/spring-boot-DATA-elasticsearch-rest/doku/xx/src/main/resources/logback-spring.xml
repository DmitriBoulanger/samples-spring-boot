<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<!-- =========================================================================================================== -->
<!-- LOGBACK INDEPENDENT CONFIGURATION                                                                           -->
<!-- Name of this file is NOT logback-spring.xml, and, therefore the logger configures it by itself.             -->
<!-- There is NO influence from the Spring-Boot, e.g application.properties file is completely ignored           -->
<!-- =========================================================================================================== -->

<configuration debug="false">

	<!-- ======================================================================================================= -->
	<!-- STANDARD APPENDERS                                                                                      -->
	<!-- ======================================================================================================= -->

	<contextName>Case-Service Logback-configuration</contextName>

	<!-- Normal console for INFO, DEBUG and TRACE -->
	<appender name="NORMAL_MESSAGES" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>DENY</onMatch>
			<onMismatch>NEUTRAL</onMismatch>
		</filter>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>WARN</level>
			<onMatch>DENY</onMatch>
			<onMismatch>NEUTRAL</onMismatch>
		</filter>
		<encoder>
			<pattern>%-4relative ms. [%30thread] %-5level %40logger{0} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Error console for WARNINGS and ERRORS -->
	<appender name="WARNINGS_ERRORS" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<!-- deny all events with a level below WARN, that is INFO, TRACE and DEBUG -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<encoder>
			<pattern>%-4relative ms. [%30thread] %-5level %40logger{0} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- ======================================================================================================= -->
	<!--                              SPECIAL APPENDERS                                                          -->
	<!-- ======================================================================================================= -->

	<appender name="NORMAL_MESSAGES_SPRING" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.core.filter.EvaluatorFilter">
			<evaluator>
				<expression>
					return message.contains("Finished creating instance of bean");
				</expression>
			</evaluator>
			<OnMismatch>DENY</OnMismatch>
			<OnMatch>NEUTRAL</OnMatch>
		</filter>
		<encoder>
			<pattern>%-4relative ms. [%30thread] %-5level %40logger{0} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- ======================================================================================================= -->
	<!--                            LOGGERS                                                                      -->
	<!-- ======================================================================================================= -->

	<!-- Any warning or error has to be logged -->
	<root level="WARN">
		<appender-ref ref="WARNINGS_ERRORS" />
	</root>

	<logger name="XXXXXXXXXXXXXX.services.rcase" level="DEBUG">
		<appender-ref ref="NORMAL_MESSAGES" />
	</logger>

	<logger name="org.springframework.data" 
		level="DEBUG" additivity="false">
		<appender-ref ref="NORMAL_MESSAGES" />
	</logger>
	
	 <logger name="org.springframework.boot.context.embedded.tomcat" 
		level="DEBUG" additivity="false">
		<appender-ref ref="NORMAL_MESSAGES" />
	</logger>
	
	<logger name="org.springframework.boot.web" 
		level="DEBUG">
		<appender-ref ref="NORMAL_MESSAGES" />
	</logger>
     
	<!-- =================================================================================================== -->
	<!--                                               SPECIAL LOGGERS                                       -->
	<!-- =================================================================================================== -->
	<logger name="org.springframework.beans.factory.support" level="INFO"
		additivity="false">
		<appender-ref ref="NORMAL_MESSAGES_SPRING" />
	</logger>

</configuration>